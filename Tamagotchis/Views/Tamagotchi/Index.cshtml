@using Tamagotchis.Models;

<!DOCTYPE html>
<html>
  <head>
    <title>MyTamagotchi</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="container">
      <h1 class="jumbotron">Tamagotchi Park</h1>
      @foreach(Tama egg in Model)
      {
        <h3><a href='tamagotchi/@egg.GetId()'>@egg.GetName() - Food: @egg.GetHunger(), Sleep: @egg.GetSleep(), Attention: @egg.GetAttention()</a></h3>
      }
      <a href='/tamagotchi/new'><button class='btn btn-info'>Hatch a new Tamagotchi!</button></a>
      <br><br>
      <form action='/time' method='post'>
        <button type="submit" class="btn btn-primary">+ Time</button>
      </form>
    </div>
  </body>
</html>
